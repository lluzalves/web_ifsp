<nav class="navbar-nav">
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark ">
        <a class="navbar-brand" href="{{ path_for('home') }}"><b>ifspdocs</b></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample03"
                aria-controls="navbars" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbars">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link">
                        {% if email %}
                            Olá, {{ email }}
                        {% endif %}
                    </a>
                </li>
                {% if role == "aluno" %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path_for('document.form') }}">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                 fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                 stroke-linejoin="round" class="feather feather-file">
                                <path d="M13 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V9z"></path>
                                <polyline points="13 2 13 9 20 9"></polyline>
                            </svg>
                            Adicionar Documento
                        </a>
                    </li>
                {% endif %}
                {% if role == "admin" %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path_for('edict.form') }}">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                 fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                 stroke-linejoin="round" class="feather feather-file">
                                <path d="M13 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V9z"></path>
                                <polyline points="13 2 13 9 20 9"></polyline>
                            </svg>
                            Adicionar Edital
                        </a>
                    </li>
                {% endif %}
                {% if notifications|length >0 %}
                <div class="btn-group">
                    <li>
                        <a class="nav-link dropdown-toggle" href="#" id="alertsDropdown" role="button"
                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                 fill="none" stroke="aquamarine" stroke-width="2" stroke-linecap="round"
                                 stroke-linejoin="round">
                                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                                <polyline points="22,6 12,13 2,6"></polyline>
                            </svg>
                            <span class="badge badge-alert badge-counter" aria-atomic="true"
                                  style="color: aquamarine">{{ notifications|length }}</span>
                        </a>
                        <div class="dropdown-menu">
                            <h4 class="dropdown-header">
                                Central de notificações </h4>
                            {% for notification in notifications %}
                                <a class="dropdown-item d-flex align-items-center" href="#">
                                    <div class="mr-4">
                                        {% if notification.type == 'atencao' %}
                                            <div style="color: yellow; background-color: yellow">
                                                " "
                                            </div>
                                        {% endif %}
                                        {% if notification.type == 'sucesso' %}
                                            <div style="color: greenyellow; background-color: greenyellow">
                                                " "
                                            </div>
                                        {% endif %}
                                        {% if notification.type == 'alerta' %}
                                            <div style="color: red; background-color: red">
                                                " "
                                            </div>
                                        {% endif %}
                                    </div>
                                    <div>
                                        <div class="small text-gray-500">{{ notification.created_at }}</div>
                                        <span class="font-weight">{{ notification.body }}</span>
                                    </div>
                                </a>
                                <div class="dropdown-divider"></div>
                            {% endfor %}
                        </div>
                        {% endif %}
                        <div class="dropdown-menu">
                            <h4 class="dropdown-item " style="color: black">Central de notificações </h4>
                            {% if notifications|length < 1 %}
                                <a class="dropdown-item d-flex align-items-center" href="#">
                                    <div class="mr-4">
                                        <div style="color: aquamarine; background-color: aquamarine">
                                            " "
                                        </div>
                                    </div>
                                    <div>
                                        <div class="small text-gray-500">{{ "now"|date("d/m/Y") }}</div>
                                        <span class="font-weight">Por enquanto tudo tranquilo</span>
                                    </div>
                                </a>
                                <div class="dropdown-divider"></div>
                            {% endif %}
                        </div>
                    </li>
                </div>
            </ul>
            {% if email %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path_for('auth.logout') }}">Sair</a>
                </li>
            {% endif %}
            </ul>
        </div>
    </nav>
</nav>