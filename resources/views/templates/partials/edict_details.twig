<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Edital - {{ edict.description }}</h6>
        </div>
        <div class="card-body">
            <h4 class="small font-weight-bold">Tipo<span class="float-right">{{ edict.type }}</span></h4>
            <h4 class="small font-weight-bold">Descrição<span class="float-right">{{ edict.description }}</span></h4>
            {% if edict.is_available==0 %}
                <h4 class="small font-weight-bold">Situação <span class="float-right">Liberado</span></h4>
            {% else %}
                <h4 class="small font-weight-bold">Situação <span class="float-right">Bloqueado</span></h4>
            {% endif %}
            <h4 class="small font-weight-bold">Atualizado em<span class="float-right">{{ edict.updated_at }}</span>
            </h4>
            <h4 class="small font-weight-bold">Criado em<span class="float-right">{{ edict.created_at }}</span></h4>
        </div>
    </div>
</div>


<div class="container-fluid">
    <div class="col-xl-3  mb-4">
        <a class="text-center btn btn-primary btn-sm active"
           href="{{ path_for('users.all', { 'edict_id' : edict.id}) }}">Visualizar inscrições</a>
    </div>
</div>


