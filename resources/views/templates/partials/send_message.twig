<div class="container-fluid">
    <div class="row">
        <div class="col-md-4 d- d-md-block bg-light sidebar">
            <div class="myform form col-md-16">
                <div class="logo mb-3">
                    <div class="col-md-12 text-center">
                        <h1>Enviar mensagem</h1>
                    </div>
                </div>
                <form action="" name="addMessage" method="post">

                    <div class="form-group  {{ errors.subject }} ? 'has-error' : '' }}">
                        <label>Assunto</label>
                        <input type="text" name="subject" class="form-control" id="subject"
                               placeholder="Qual o motivo do contato ?">
                        {% if errors.subject %}
                            <span class="help-block" style="color:crimson">Esse campo não pode ser vazio</span>
                        {% endif %}
                    </div>

                    <div class="form-group  {{ errors.body }} ? 'has-error' : '' }}">
                        <label>Mensagem</label>
                        <textarea class="form-control" name="subject" id="subject" rows="3"
                                  placeholder="Digite a mensagem"></textarea>
                        {% if errors.body %}
                            <span class="help-block" style="color:crimson">Esse campo não pode ser vazio</span>
                        {% endif %}
                    </div>


                    <div class="col-md-12 text-center mb-3">
                        <button type="submit" class=" btn btn-block mybtn btn-primary tx-tfm">Enviar</button>
                    </div>

                    <div class="col-md-12  has-error">
                        <div class="form-group">
                            <p class="text-center" style="color:crimson"><a id="error">{{ result_error }}</a></p>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-8 mx-auto">
            <div class="col-md-15">
                <img src="https://i.imgur.com/YulJQ3j.jpg" height="720" width="920"/>
            </div>
        </div>
    </div>
</div>

